<% layout ("/layouts/boilerplate.ejs")%>

<body>
   
     <div class="row mt-5" >
        <div class="col-8 offset-3" >
        <h3 class="mb-5">Create your Listings</h3>
        <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data" >

            <div class="mb-3">
                <label for="title" class="form-label" >Title</label>
                <input type="text" name="listing[title]" placeholder="enter title" 
                class="form-control" required>
                <div class="valid-feedback">Title looks goood!</div>

                <br>
            </div>
       
            <div class="mb-3">
       <label for="description" class="form-label">description</label>
       <textarea type="text" class="form-control" 
       name="listing[description]" required></textarea>
       <div class="invalid-feedback">Please enter a short description.</div>
       <br>
    </div>
    
    
    <div class="mb-3">
      <label for="description" class="form-label">Upload Image </label>
      <input type="file" class="form-control" 
      name="listing[image]" required>
     
      <br>
   </div>
    

        <div class="row">
       <div class="mb-3 col-md-4">
       <label for="price" class="form-label">price</label>
       <input type="number" class="form-control" required
        name="listing[price]" placeholder="enter price">
       <br>
       <div class="invalid-feedback">Price should be valid.</div>
    </div>

       <div class="mb-3" >
       <label for="location"  class="form-label">Location</label>
       <input type="text" class="form-control" required
        name="listing[location]" placeholder="enter location">
       <br>
       <div class="invalid-feedback">Location should be valid.</div>
    </div>
   </div>

       <div class="mb-3 col-md-8">
       <label for="country"  class="form-label">country</label>
       <input type="text" class="form-control" required
       name="listing[country]" placeholder="enter country">
       <div class="invalid-feedback">Country should be valid.</div>
       <br>
    </div>

       <button class="btn-dark edit-btn btn"> Add</button>


        </form>

     </div>
    </div>
</body>